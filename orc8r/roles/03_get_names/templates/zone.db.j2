@   IN  SOA     primary.{{ magma.domain }}. root.{{ magma.domain }}. (
                                                1001    ;Serial
                                                3H      ;Refresh
                                                15M     ;Retry
                                                1W      ;Expire
                                                1D      ;Minimum TTL
                                                )
;Name Server Information
@      IN  NS      primary.{{ magma.domain }}.

;IP address of Name Server
primary IN  A       {{ dns.ip }}

;Mail exchanger
{{ magma.domain }}. IN  MX 10   mail.{{ magma.domain }}.

;A - Record HostName To IP Address
*.nms                     IN  A       {{ nms }}
controller                IN  A       {{ controller }}
bootstrapper-controller   IN  A       {{ bootstrapper }}
api                       IN  A       {{ api }}
fluentd                   IN  A       {{ fluentd }}

